[Unit]
Description=Flight Control CLI Artifacts Configuration Templating
PartOf=flightctl.target
After=flightctl-api.service
Wants=flightctl-api.service

[Container]
ContainerName=flightctl-cli-artifacts-init
Image=quay.io/flightctl/flightctl-api:latest
Pull=newer

Volume=/etc/flightctl/service-config.yaml:/app/service-config.yaml:ro,z
Volume=/usr/share/flightctl/flightctl-cli-artifacts/env.template:/app/templates/env.template:ro,z
Volume=/usr/share/flightctl/flightctl-cli-artifacts/nginx.conf.template:/app/templates/nginx.conf.template:ro,z
Volume=/usr/share/flightctl/flightctl-cli-artifacts/nginx.conf.ipv4.template:/app/templates/nginx.conf.ipv4.template:ro,z
Volume=/usr/share/flightctl/flightctl-cli-artifacts/nginx.conf.ipv6.template:/app/templates/nginx.conf.ipv6.template:ro,z
Volume=/etc/flightctl/flightctl-cli-artifacts:/app/rendered:rw,z

Exec=/app/flightctl-service-setup

[Service]
Type=oneshot
RemainAfterExit=true
Restart=on-failure
RestartSec=5s

[Install]
WantedBy=flightctl.target
